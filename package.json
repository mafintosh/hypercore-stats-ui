{
  "name": "hypercore-stats-ui",
  "version": "1.1.0",
  "description": "HTML based stats ui for hypercore/hyperdrive",
  "main": "index.js",
  "dependencies": {
    "browserify": "^13.0.1",
    "corsify": "^2.1.0",
    "event-source-stream": "^1.5.0",
    "pretty-bytes": "^3.0.1",
    "speedometer": "^1.0.0"
  },
  "scripts": {
    "install": "browserify app.js -o bundle.js && npm run build-css",
    "build-css": "node-sass --importer node_modules/node-sass-magic-importer css/main.scss css/main.css",
    "watch-css": "nodemon -e css/main.scss -x \"npm run build-css\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mafintosh/hypercore-stats-ui.git"
  },
  "author": "Mathias Buus (@mafintosh)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mafintosh/hypercore-stats-ui/issues"
  },
  "homepage": "https://github.com/mafintosh/hypercore-stats-ui",
  "devDependencies": {
    "dat-design": "^1.2.4",
    "node-sass": "^3.8.0",
    "node-sass-magic-importer": "^0.1.4",
    "nodemon": "^1.9.2"
  }
}
